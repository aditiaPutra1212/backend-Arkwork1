{
  "name": "arkwork-backend",
  "version": "1.0.0",
  "description": "ArkWork Backend with Express, TypeScript, Prisma, Midtrans",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsup src/index.ts --format=esm --platform=node --target=node20 --sourcemap --minify --out-dir dist --clean --splitting=false --external @prisma/client --external prisma",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "seed:admin": "node scripts/seed-admin.js",
    "db:seed": "node prisma/seed.js",
    "seed:employer": "ts-node prisma/seed-employer-admin.ts",
    "postinstall": "prisma generate && npm run build"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.14.0",
    "argon2": "^0.44.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.1.2",
    "cookie": "^0.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.3",
    "openid-client": "^5.7.1",
    "p-limit": "^6.2.0",
    "rss-parser": "^3.13.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": "20.x || 18.x"
  }
}
