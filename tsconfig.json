{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "allowJs": false
  },
  "include": ["src", "types"],
  "exclude": [
    "node_modules",
    "dist",
    "prisma/**/*.ts",
    "scripts/**/*.ts"
  ]
}
